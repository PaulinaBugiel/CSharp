<UserControl x:Class="PlantTrackerUI.Views.PlantDetailsDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlantTrackerUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Name:" />
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedPlant.Name}"/>
        <TextBlock Grid.Row="1" Text="Type(s):" />
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedPlant.TypesString}"/>
        <TextBlock Grid.Row="2" Text="Planting date" />
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedPlant.PlantingDateString}"/>
        <!-- <TextBlock Grid.Row="3" Text="Last watering date" /> -->
        <!-- <TextBlock Grid.Row="4" Text="Container(s):" /> -->
        <!-- <TextBlock Grid.Row="5" Text="Watering system(s):" />-->
        <!-- <TextBlock Grid.Row="6" Text="Position:" /> -->
    </Grid>
</UserControl>
