<Window x:Class="PlantTrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantTrackerUI" 
        xmlns:views="clr-namespace:PlantTrackerUI.Views"
        mc:Ignorable="d" FontSize="16"
        Title="MainWindow" Height="650" Width="1000">
    <Grid Opacity="0.7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />   <!-- 0: Left Margin -->
            <ColumnDefinition Width="Auto" /> <!-- 1: Left Pane -->
            <ColumnDefinition Width="Auto" /> <!-- 2: Left Pane -->
            <ColumnDefinition Width="*" />    <!-- 3: Main Area -->
            <ColumnDefinition Width="Auto" /> <!-- 4: Right Pane -->
            <ColumnDefinition Width="Auto" /> <!-- 5: Right Pane -->
            <ColumnDefinition Width="20" />   <!-- 6: Right Margin -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- TODO change to 3 separate grids or views -->
            <RowDefinition Height="20" />   <!-- 0: Top Margin -->
            <RowDefinition Height="Auto" /> <!-- 1: -->
            <RowDefinition Height="*" />    <!-- 2: Extendable Region -->
            <RowDefinition Height="Auto" /> <!-- 3: -->
            <RowDefinition Height="20" />   <!-- 4: Bottom Margin -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="15 0 0 0">
            <TextBlock Text="{Binding SelectedPlant.Name}"  
                           FontSize="22" Margin="0 0 15 0" VerticalAlignment="Center" />
            <TextBlock Text="{Binding SelectedPlant.TypesString}" 
                           FontSize="18" Margin="0 0 15 0" Opacity="0.7" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="PlantingDate" FontSize="18" Margin="0 0 15 0" Opacity="0.7" 
                        VerticalAlignment="Center" >
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="{Binding ElementName=PlantsList, Path=SelectedItem, 
                            Converter={StaticResource NullToVis}}"/>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Text="{Binding Path=SelectedPlant.PlantingDateString}"
                        FontSize="18" Opacity="0.7" VerticalAlignment="Center" />
        </StackPanel>

        <views:LeftPane Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" />

        <views:PlantDetailsDashboard Grid.Row="2" Grid.Column="2" Grid.RowSpan="2">
            <views:PlantDetailsDashboard.Style>
                <Style TargetType="views:PlantDetailsDashboard">
                    <Setter Property="Visibility" Value="{Binding ElementName=PlantsList, Path=SelectedItem, 
                        Converter={StaticResource NullToVis}}"/>
                </Style>
            </views:PlantDetailsDashboard.Style>
        </views:PlantDetailsDashboard>
    </Grid>
</Window>
