<UserControl x:Class="PlantTrackerUI.UserControls.AddAttributeButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlantTrackerUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="addattribute">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Border BorderThickness="1" BorderBrush="#8adb96" Background="#cdf7d3" Margin="0 0 5 0">
                <Button Background="#cdf7d3" BorderThickness="0" Padding="5 0"
                        Command="{Binding AddElementWindowCommand, ElementName=addattribute}" 
                        Content="{Binding AddButtonContent, ElementName=addattribute}"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
